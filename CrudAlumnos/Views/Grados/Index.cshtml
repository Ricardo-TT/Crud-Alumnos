@model IEnumerable<CrudAlumnos.Models.Grado>
@{
    ViewData["Title"] = "Lista de Grados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle-fill"></i> &nbsp;
            @TempData["mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Grados</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-outline-success d-block" asp-action="Create" asp-controller="Grados"> <i class="bi bi-person-fill-add"></i>&nbsp;Agregar Nuevo Grado</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="grid text-center table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Grado_Escolar)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Grado_Escolar</td>
                            <td>
                                <a asp-controller="Grados" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-person-fill-gear"></i>&nbsp; Editar</a>
                                <a asp-controller="Grados" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-person-fill-x"></i>&nbsp; Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>