@model CrudAlumnos.Models.Grado
@{
    ViewData["Title"] = "Añadir Nuevo Grado";
    Layout = null;
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Añadir Nuevo Grado</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Grado_Escolar" class="control-label"></label>
                    <input asp-for="Grado_Escolar" class="form-control" />
                    <span asp-validation-for="Grado_Escolar" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-person-fill-check"></i>&nbsp; Añadir Grado
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}