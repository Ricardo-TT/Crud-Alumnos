@model CrudAlumnos.Models.Alumno
@{
    ViewData["Title"] = "Editar Alumno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@10" rel="stylesheet" />

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Editar Alumno</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estatus" class="control-label"></label>
                    <input asp-for="Estatus" class="form-control" />
                    <span asp-validation-for="Estatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GradoId" class="control-label"></label>
                    <input asp-for="GradoId" class="form-control" />
                    <span asp-validation-for="GradoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button id="BotonGuardar" type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-person-check"></i> &nbsp; Guardar
                    </button>

                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

