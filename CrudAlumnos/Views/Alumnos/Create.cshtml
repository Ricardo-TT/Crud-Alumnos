@model CrudAlumnos.Models.Alumno
@{
    ViewData["Title"] = "Añadir Nuevo Alumno";
    Layout = null;
}


<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h3>Añadir Nuevo Alumno</h3>
        </div>
    </div>

    <div class="row">
       <div class="col-sm-10">
           <form method="post" asp-action="Create">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                   <label asp-for="Nombre" class="control-label"></label>
                   <input asp-for="Nombre" class="form-control" />
                   <span asp-validation-for="Nombre" class="text-danger"></span>
               </div>

                <div class="form-group mb-2">
                    <label asp-for="Estatus" class="control-label"></label>
                    <input asp-for="Estatus" class="form-control" />
                    <span asp-validation-for="Estatus" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Estado_Alumno" class="control-label"></label>
                    <div class="form-check form-switch">
                        <input asp-for="Estado_Alumno" class="form-check-input" type="checkbox" role="switch" /> &nbsp;
                        <label class="form-check-label" asp-for="Estado_Alumno"></label>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GradoId" class="control-label"></label>
                    <input asp-for="GradoId" class="form-control" />
                    <span asp-validation-for="GradoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <button id="BotonAdd" type="submit" class="btn btn-outline-primary me-5">
                        <i class="bi bi-person-fill-check"></i>&nbsp; Añadir Alumno
                    </button> &nbsp;

                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle-fill"></i>&nbsp; Cancelar
                    </button>

                </div>

           </form>
       </div>
    </div>

</div>

@section Scripts{
    @{
            <partial name="_ValidationScriptsPartial"></partial>
    }
}

<script>
    document.getElementById("BotonAdd").addEventListener("click", function (event) {
        event.preventDefault();

        Swal.fire({
            title: '¿Los datos están correctos?',
            text: '¡Verifica los datos antes de continuar!',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, quiero añadirlo'
        }).then((result) => {
            if (result.isConfirmed) {
                //<----------  ENVIA FORMULARIO  ----------->
                event.target.form.submit();

                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'El alumno se añadio correctamente',
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        });
    });
</script>
